<ui:ContentDialog
  x:Class="YXSFocTool.View.UpdateFirmwarePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
  xmlns:local="clr-namespace:YXSFocTool.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
  xmlns:vm="clr-namespace:YXSFocTool.ViewModel"
  MinWidth="400"
  MinHeight="240"
  d:DataContext="{d:DesignInstance Type=vm:UpdateFirmwareViewModel}"
  DefaultButton="Primary"
  FontSize="16"
  IsPrimaryButtonEnabled="{Binding IsSuccess, Mode=OneWay}"
  IsSecondaryButtonEnabled="{Binding IsUpdating, Mode=OneWay}"
  PrimaryButtonText="完成"
  SecondaryButtonText="取消"
  mc:Ignorable="d">
  <ui:ContentDialog.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ui:ThemeResources />
        <ui:XamlControlsResources />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </ui:ContentDialog.Resources>
  <ui:ContentDialog.TitleTemplate>
    <DataTemplate>
      <Grid Margin="120,0" HorizontalAlignment="Stretch">
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Text="固件更新" />
      </Grid>
    </DataTemplate>
  </ui:ContentDialog.TitleTemplate>
  <ikw:SimpleStackPanel HorizontalAlignment="Stretch">
    <!--  固件版本  -->
    <Border
      Margin="0,2,0,0"
      BorderBrush="#33000000"
      BorderThickness="1"
      CornerRadius="4">
      <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
          Grid.Column="0"
          Margin="0,0"
          VerticalAlignment="Center"
          Text="固件类型:" />
        <TextBlock
          Grid.Column="1"
          Margin="3,0"
          VerticalAlignment="Center"
          Text="{Binding FirmwareType}" />
      </Grid>
    </Border>

    <!--  文件名  -->
    <Border
      Margin="0,2,0,0"
      BorderBrush="#33000000"
      BorderThickness="1"
      CornerRadius="4">
      <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
          Grid.Column="0"
          Margin="0,0"
          VerticalAlignment="Center"
          Text="文件名:" />
        <TextBlock
          Grid.Column="1"
          Margin="3,0"
          VerticalAlignment="Center"
          Text="{Binding FirmwareFileName, Mode=OneWay}" />
      </Grid>
    </Border>

    <!--  版本  -->
    <Border
      Margin="0,2,0,0"
      BorderBrush="#33000000"
      BorderThickness="1"
      CornerRadius="4">
      <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
          Grid.Column="0"
          Margin="0,0"
          VerticalAlignment="Center"
          Text="当前版本:" />
        <TextBlock
          Grid.Column="1"
          Margin="3,0"
          VerticalAlignment="Center"
          Text="{Binding FirmwareVersion}" />
      </Grid>
    </Border>

    <!--  进度条  -->
    <Border
      Margin="0,2,0,0"
      BorderBrush="#33000000"
      BorderThickness="1"
      CornerRadius="4">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ui:ProgressBar
          Grid.Column="0"
          Margin="3,0,0,0"
          Maximum="100"
          Minimum="0"
          Value="{Binding UpdateProgress, Mode=OneWay}" />
        <TextBlock
          Grid.Column="1"
          Margin="3,0"
          VerticalAlignment="Center"
          Text="{Binding ProgressStr}" />
      </Grid>
    </Border>
  </ikw:SimpleStackPanel>
</ui:ContentDialog>
